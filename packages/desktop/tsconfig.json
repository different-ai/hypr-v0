{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"]
    }
  },
  "include": ["frontend/**/*", "electron/**/*"],
  "files": ["frontend/types/electron.d.ts", "frontend/types/window.d.ts"],
  "typeRoots": ["./frontend/types", "./node_modules/@types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
