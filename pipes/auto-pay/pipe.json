{
    "name": "auto-pay-pipe",
    "version": "0.1.0",
    "fields": [
        {
            "name": "analysisWindow",
            "type": "number",
            "description": "How many hours of screen data to analyze?",
            "default": 24
        },
        {
            "name": "wiseApiToken",
            "type": "string",
            "description": "Wise (TransferWise) API Token"
        },
        {
            "name": "wiseProfileId",
            "type": "number",
            "description": "Default Wise profile ID"
        }
    ],
    "crons": [
        {
            "path": "/api/analyze",
            "schedule": "0 */5 * * * *"
        }
    ]
}
